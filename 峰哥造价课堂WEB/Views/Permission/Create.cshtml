@model 峰哥造价课堂WEB.Models.Permission

@{
    ViewData["Title"] = "添加新权限";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PermKey" class="control-label"></label>
        <input asp-for="PermKey" class="form-control" />
        <span asp-validation-for="PermKey" class="text-danger"></span>
        <small class="form-text text-muted">权限唯一标识（英文/数字/下划线，最长30字符）</small>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <small class="form-text text-muted">权限名称（最长50字符）</small>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
        <small class="form-text text-muted">权限描述（可选，最长255字符）</small>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="保存" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary ms-2">取消</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}