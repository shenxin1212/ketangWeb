@model List<峰哥造价课堂WEB.Models.Video>
@{
    ViewData["Title"] = "视频管理";
}

<h2><i class="fas fa-video"></i> 视频管理</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a asp-controller="Video" asp-action="Upload" class="btn btn-success">
            <i class="fas fa-upload"></i> 上传新视频
        </a>
    </div>
    <div>
        <span class="badge bg-primary">共 @Model.Count 个视频</span>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>标题</th>
                            <th>权限</th>
                            <th>大小</th>
                            <th>观看次数</th>
                            <th>上传时间</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var video in Model)
                        {
                            <tr>
                                <td>@video.Id</td>
                                <td>
                                    <strong>@video.Title</strong>
                                    @if (video.IsPublic)
                                    {
                                        <span class="badge bg-info ms-1">公开</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-@(video.RequiredRole == "Guest" ? "success" : video.RequiredRole == "User" ? "warning" : "danger")">
                                        @video.RequiredRole
                                    </span>
                                </td>
                                <td>@(video.FileSize / 1024 / 1024) MB</td>
                                <td>@video.ViewCount</td>
                                <td>@video.UploadDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <form asp-controller="Video" asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('确定要删除视频 @video.Title 吗？');">
                                        <input type="hidden" name="id" value="@video.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> 删除
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <h5>暂无视频</h5>
                <p>系统中还没有视频数据。</p>
            </div>
        }
    </div>
</div>