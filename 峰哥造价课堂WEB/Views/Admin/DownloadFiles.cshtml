@model List<峰哥造价课堂WEB.Models.DownloadFile>
@{
    ViewData["Title"] = "文件管理";
}

<h2><i class="fas fa-download"></i> 文件管理</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a asp-controller="Download" asp-action="Upload" class="btn btn-success">
            <i class="fas fa-upload"></i> 上传新文件
        </a>
    </div>
    <div>
        <span class="badge bg-primary">共 @Model.Count 个文件</span>
        <span class="badge bg-success ms-1">总下载: @Model.Sum(f => f.DownloadCount) 次</span>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>文件名</th>
                            <th>类型</th>
                            <th>权限</th>
                            <th>大小</th>
                            <th>下载次数</th>
                            <th>版本</th>
                            <th>上传时间</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var file in Model)
                        {
                            <tr>
                                <td>@file.Id</td>
                                <td><strong>@file.FileName</strong></td>
                                <td>
                                    <span class="badge bg-info">@file.FileType.ToUpper()</span>
                                </td>
                                <td>
                                    <span class="badge bg-@(file.RequiredRole == "Guest" ? "success" : file.RequiredRole == "User" ? "warning" : "danger")">
                                        @file.RequiredRole
                                    </span>
                                </td>
                                <td>@(file.FileSize / 1024 / 1024) MB</td>
                                <td>@file.DownloadCount</td>
                                <td>@file.Version</td>
                                <td>@file.UploadDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <form asp-controller="Download" asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('确定要删除文件 @file.FileName 吗？');">
                                        <input type="hidden" name="id" value="@file.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> 删除
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <h5>暂无文件</h5>
                <p>系统中还没有文件数据。</p>
            </div>
        }
    </div>
</div>