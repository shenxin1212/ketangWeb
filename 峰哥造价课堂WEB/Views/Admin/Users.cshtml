@model List<峰哥造价课堂WEB.Models.User>
@{
    ViewData["Title"] = "用户管理";
}

<h2><i class="fas fa-users"></i> 用户管理</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">用户列表</h5>
        <span class="badge bg-primary">共 @Model.Count 个用户</span>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>用户名</th>
                            <th>昵称</th>
                            <th>手机号</th>
                            <th>角色</th>
                            <th>状态</th>
                            <th>注册时间</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>
                                    <strong>@user.UserName</strong>
                                    @if (!string.IsNullOrEmpty(user.OpenId))
                                    {
                                        <span class="badge bg-info ms-1">微信用户</span>
                                    }
                                </td>
                                <td>@user.Nickname</td>
                                <td>@user.Mobile</td>
                                <td>
                                    <span class="badge bg-@(user.Role == "Admin" ? "danger" : user.Role == "User" ? "warning" : "secondary")">
                                        @user.Role
                                    </span>
                                </td>
                                <td>
                                    @if (user.IsActive && user.Status == 1)
                                    {
                                        <span class="badge bg-success">正常</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">禁用</span>
                                    }
                                </td>
                                <td>@user.CreateTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-outline-primary">
                                            <i class="fas fa-edit"></i> 编辑
                                        </a>

                                        @if (user.UserName != "admin")
                                        {
                                            <form asp-action="ToggleUserStatus" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <button type="submit" class="btn btn-sm @(user.IsActive ? "btn-outline-warning" : "btn-outline-success")">
                                                    <i class="fas @(user.IsActive ? "fa-ban" : "fa-check")"></i>
                                                    @(user.IsActive ? "禁用" : "启用")
                                                </button>
                                            </form>

                                            <form asp-action="ResetPassword" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <button type="submit" class="btn btn-outline-info btn-sm" onclick="return confirm('确定要重置用户 @user.UserName 的密码吗？密码将重置为 123456')">
                                                    <i class="fas fa-key"></i> 重置密码
                                                </button>
                                            </form>

                                            <form asp-action="DeleteUser" method="post" class="d-inline" onsubmit="return confirm('确定要删除用户 @user.UserName 吗？此操作不可恢复！');">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                                    <i class="fas fa-trash"></i> 删除
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-muted ms-2">系统管理员</span>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <h5>暂无用户</h5>
                <p>系统中还没有用户数据。</p>
            </div>
        }
    </div>
</div>